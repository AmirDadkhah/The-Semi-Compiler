void error(int line,char s[20],int errornumber)
{
	switch(errornumber){
		case 1 :
			printf("Error in Line %d : Expected '{' But We See %s\n",line,s);
			break;
		case 2:
			printf("Error in Line %d : Expected ')' But We See %s\n",line,s);
			break;
		case 3:
			printf("Error in Line %d : Expected '(' But We See %s\n",line,s);
			break;
		case 4:
			printf("Error in Line %d : Expected ';' But We See %s\n",line,s);
			break;
		case 5:
			printf("Error in Line %d : Expected IDENTIFIER But We See %s\n",line,s);
			break;
		case 6:
			printf("Error in Line %d : Expected IDENTIFIER or NUMBER But We See %s\n",line,s);
			break;
		case 7:
			printf("Error in Line %d : Expected OPERATOR or ';' But We See %s\n",line,s);
			break;
		case 8:
			printf("Error in Line %d : Expected '=' or ';' or ',' But We See %s\n",line,s);
			break;
		case 9:
			printf("Error in Line %d : Expected IDENTIFIER or TRUE or FALSE But We See %s\n",line,s);
			break;
		case 10:
			printf("Error in Line %d : Expected IDENTIFIER or CHARACTER But We See %s\n",line,s);
			break;
		case 11:
			printf("Error in Line %d : Expected '=' But We See %s\n",line,s);
			break;
		case 12:
			printf("Error in Line %d : Expected IDENTIFIER or CHARACTER or NUMBER But We See %s\n",line,s);
			break;
		case 13:
			printf("Error in Line %d : Expected NUMBER But We See %s\n",line,s);
			break;
		case 14:
			printf("Error in Line %d : Expected OPERATOR But We See %s\n",line,s);
			break;
		case 15:
			printf("Error in Line %d : Expected CORRECT EXPRESSION But We See %s\n",line,s);
			break;
		case 16:
			printf("Error in last line : Expected '}' But We didn't See anything!!\n");
		case 17:
			printf("Error  : Expected '{' before '{' !!\n");
			break;
	}
	
	return; 
}


