#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int main(){
	int i,j,k;
	char a[100],ch;
	printf("Enter Your Statement:");
	
	for(i=0;i<=99;i++){
		a[i]=getche();
		if(isspace(a[i])!=0){
			k=i;
			break;
		}
	}
	
	if(isupper(a[0])==0 && islower(a[0])==0){
		printf("\nError");
		exit(1);
	}
	
	for(j=1;j<=k;j++){
		ch=a[j];
		if(ispunct(ch)!=0){
			printf("\nError");
			break;
		}
	}
	
	return 0;
}
